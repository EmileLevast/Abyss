<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rootView"
>



    <ImageView android:layout_width="match_parent" android:layout_height="wrap_content"
               android:scaleType="centerCrop"
               android:src="@drawable/verso_lieu"
               android:layout_alignParentTop="true"
               android:layout_alignBottom="@+id/linearLayoutFragLocation"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearLayoutFragLocation"
    >

        <Button
                style="@style/buttonDrawLocation"
                android:id="@+id/buttonfragLocationDraw1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x1"
        />

        <Button
                style="@style/buttonDrawLocation"
                android:id="@+id/buttonfragLocationDraw2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x2"
        />

        <Button
                style="@style/buttonDrawLocation"
                android:id="@+id/buttonfragLocationDraw3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x3"
        />

        <Button
                style="@style/buttonDrawLocation"
                android:id="@+id/buttonfragLocationDraw4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x4"
        />
    </LinearLayout>


    <fr.emile.abyss.affichage.gestionFragment.recyclerView.HorizontalRecyclerView
    android:id="@+id/recyclerViewFragLocation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/linearLayoutFragLocation"
    />



</RelativeLayout>