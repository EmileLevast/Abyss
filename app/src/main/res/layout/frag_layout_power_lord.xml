<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rootView"
>
    <ImageView
            android:id="@+id/imageViewFragPowerLordBackground"
            android:scaleType="centerInside"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.7"
    />

    <TextView
            style="@style/textAboveAlly"
            android:id="@+id/textViewExplanationPowerLordFrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="italic"
            android:layout_alignParentTop="true"
            android:text="Federated"
    />


    <fr.emile.abyss.affichage.gestionFragment.recyclerView.HorizontalRecyclerView
            android:id="@+id/recyclerViewPowerLordFrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewExplanationPowerLordFrag"
            android:layout_centerInParent="true"
    />


</RelativeLayout>