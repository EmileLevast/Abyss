<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/plateauAbyss">

    <TextView
            style="@style/AccueilBouton"
            android:id="@+id/launchExploration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exploration"
            android:layout_alignParentTop="true"
    />

    <TextView
            style="@style/AccueilBouton"
            android:id="@+id/TakeCouncilStack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/launchExploration"
            android:text="take council"
    />

    <TextView
            style="@style/AccueilBouton"
            android:id="@+id/BuyLord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy a Lord"
            android:layout_below="@+id/TakeCouncilStack"
    />


</RelativeLayout>